{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "React",
  "extends": "@eslint-sample/typescript-config/base",
  "compilerOptions": {
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "moduleResolution": "bundler",
    "target": "ES2020",
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./"]
    }
  }
}
