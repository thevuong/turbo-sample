{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Library",
  "extends": "@eslint-sample/typescript-config/base",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "incremental": true,
    "lib": ["ES2020"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noEmit": false,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "removeComments": false,
    "sourceMap": true,
    "stripInternal": true,
    "target": "ES2020"
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.stories.*",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}
