{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Library",
  "extends": "@eslint-sample/typescript-config/base",
  "compilerOptions": {
    "emitDeclarationOnly": false,
    "lib": ["ES2022"],
    "noEmit": false,
    "outDir": "./dist",
    "paths": {
      "@/*": ["./src/*"]
    },
    "removeComments": false,
    "stripInternal": true,
    "target": "ES2022"
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "coverage",
    "**/*.test.*",
    "**/*.spec.*",
    "**/*.stories.*",
    "**/__tests__/**",
    "**/__mocks__/**"
  ]
}
