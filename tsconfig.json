{
  "extends": "@eslint-sample/typescript-config/base",
  "compilerOptions": {
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "allowJs": true,
    "paths": {
      "@/*": ["./src/*"],
      "~/*": ["./"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "**/*.js", "**/*.jsx"],
  "exclude": ["node_modules", "dist", "build", "coverage"]
}
