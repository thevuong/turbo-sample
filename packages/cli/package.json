{
  "name": "@eslint-sample/cli",
  "version": "0.1.0",
  "description": "CLI tool for managing package.json exports in monorepo packages",
  "keywords": [
    "cli",
    "monorepo",
    "package-json",
    "exports",
    "build-tools"
  ],
  "homepage": "https://github.com/your-org/eslint-sample/tree/main/packages/cli#readme",
  "bugs": {
    "url": "https://github.com/your-org/eslint-sample/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/eslint-sample.git",
    "directory": "packages/cli"
  },
  "license": "MIT",
  "author": "ESLint Sample Team",
  "type": "module",
  "exports": {
    ".": {
      "import": {
        "default": "./dist/esm/index.js",
        "types": "./dist/esm/index.d.ts"
      },
      "require": {
        "default": "./dist/cjs/index.cjs",
        "types": "./dist/cjs/index.d.ts"
      }
    }
  },
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "bin": {
    "eslint-sample-cli": "./dist/esm/bin/cli.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "rslib build",
    "clean": "rm -rf dist",
    "dev": "rslib build --watch",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prepublishOnly": "pnpm build && pnpm test && pnpm lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "fs-extra": "^11.2.0",
    "glob": "^11.0.0",
    "ora": "^8.1.1",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint-sample/eslint-config": "workspace:*",
    "@eslint-sample/typescript-config": "workspace:*",
    "@jest/globals": "^29.7.0",
    "@rslib/core": "^0.10.4",
    "@swc/jest": "^0.2.36",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^22.10.2",
    "jest": "^29.7.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
