{
  "name": "eslint-sample-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "ESLint sample project converted to monorepo with Turborepo",
  "license": "ISC",
  "author": "",
  "type": "module",
  "scripts": {
    "audit": "pnpm audit",
    "audit:fix": "pnpm audit --fix",
    "build": "turbo build",
    "check:licenses": "pnpm licenses list",
    "check:outdated": "pnpm outdated",
    "ci": "pnpm install --frozen-lockfile && pnpm run lint && pnpm run test && pnpm run build",
    "clean": "turbo clean",
    "clean:cache": "pnpm store prune && turbo clean",
    "clean:modules": "pnpm -r exec rm -rf node_modules dist && rm -rf node_modules",
    "commitlint": "commitlint --edit",
    "deploy": "pnpm run ci && turbo build",
    "dev": "turbo dev",
    "exports:check": "pnpm --filter @eslint-sample/cli build && node packages/cli/dist/esm/bin/cli.js generate --dry-run",
    "exports:generate": "pnpm --filter @eslint-sample/cli build && node packages/cli/dist/esm/bin/cli.js generate",
    "exports:update": "pnpm --filter @eslint-sample/cli build && node packages/cli/dist/esm/bin/cli.js generate --backup",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "install:all": "pnpm install",
    "lint": "turbo lint",
    "lint:fix": "turbo lint:fix",
    "precommit": "lint-staged",
    "prepare": "simple-git-hooks",
    "reinstall": "npm run clean:modules && pnpm install",
    "start": "turbo dev",
    "test": "turbo test",
    "type-check": "turbo type-check",
    "update:deps": "pnpm update --latest --interactive --recursive",
    "workspace:list": "pnpm list --depth=0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@commitlint/types": "^19.8.1",
    "@eslint-sample/cli": "workspace:*",
    "@eslint-sample/eslint-config": "workspace:*",
    "@eslint-sample/typescript-config": "workspace:*",
    "lint-staged": "^16.1.2",
    "prettier": "^3.6.2",
    "prettier-plugin-packagejson": "^2.5.18",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "simple-git-hooks": "^2.13.0",
    "turbo": "^2.5.4",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@9.12.0"
}
